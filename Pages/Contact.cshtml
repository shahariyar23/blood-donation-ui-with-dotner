@page
@model ContactModel
@{
    ViewBag.Title = "Contact Us";
}

<style>
    .contact-header {
        background: linear-gradient(135deg, #4f46e5, #6366f1);
        color: white;
        padding: 3rem 2rem;
        border-radius: 1rem;
        text-align: center;
        margin-bottom: 2rem;
    }

    .contact-header h1 {
        font-weight: 700;
        font-size: 2.5rem;
    }

    .form-section {
        background-color: #ffffff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-submit {
        background-color: #4f46e5;
        border: none;
        border-radius: 0.5rem;
        padding: 0.75rem 2rem;
        color: white;
        font-weight: 600;
        transition: background-color 0.3s;
    }

    .btn-submit:hover {
        background-color: #4338ca;
    }

    .map-section iframe {
        width: 100%;
        height: 350px;
        border: none;
        border-radius: 1rem;
    }

    .contact-info p {
        font-size: 1.1rem;
        margin: 0.5rem 0;
    }
</style>

<div class="container">
    <!-- Header -->
    <div class="contact-header">
        <h1>Contact Us</h1>
        <p>We'd love to hear from you! Please reach out with any questions or feedback.</p>
    </div>

    <!-- Contact Form -->
    <div class="row justify-content-center">
        <div class="col-md-8 form-section">
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" name="name" required />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" name="email" required />
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-submit">Send Message</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Map & Contact Info -->
    <div class="row mt-5">
        <div class="col-md-6 mb-4 map-section">
            <iframe src="https://maps.google.com/maps?q=Uttara,Bangladesh&t=&z=13&ie=UTF8&iwloc=&output=embed"
                loading="lazy"></iframe>
        </div>
        <div class="col-md-6 contact-info d-flex flex-column justify-content-center">
            <h3>Reach Us At</h3>
            <p><strong>Email:</strong> support@blooddonation.org</p>
            <p><strong>Phone:</strong> +880 123 456 789</p>
            <p><strong>Address:</strong> Uttara, Dhaka, Bangladesh</p>
        </div>
    </div>
</div>
