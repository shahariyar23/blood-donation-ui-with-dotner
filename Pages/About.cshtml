@page
@model AboutModel
@{
    ViewBag.Title = "About Us";
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #4f46e5, #6366f1);
        color: white;
        padding: 4rem 2rem;
        border-radius: 1rem;
        text-align: center;
        margin-bottom: 2rem;
    }

    .hero-section h1 {
        font-weight: 700;
        font-size: 3rem;
    }

    .hero-section p {
        font-size: 1.2rem;
        margin-top: 1rem;
    }

    .section-title {
        font-weight: bold;
        font-size: 2rem;
        margin-bottom: 1rem;
        text-align: center;
        color: #4f46e5;
    }

    .team-card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .team-card:hover {
        transform: translateY(-5px);
    }

    .team-img {
        border-radius: 50%;
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin: 1rem auto;
    }

    .contact-section {
        background-color: #f3f4f6;
        padding: 2rem;
        border-radius: 1rem;
    }

    .contact-section p {
        margin: 0;
    }
</style>

<div class="container">
    <!-- Hero Section -->
    <div class="hero-section">
        <h1>Welcome to Our Blood Donation Platform</h1>
        <p>Saving lives, one drop at a time.</p>
    </div>

    <!-- Mission Section -->
    <div class="mb-5">
        <h2 class="section-title">Our Mission</h2>
        <p class="text-center px-3 px-md-5">
            We strive to bridge the gap between blood donors and recipients with a seamless and secure platform.
            Our goal is to ensure that every request for blood is met with a timely and compassionate response.
        </p>
    </div>

    <!-- Team Section -->
    <div class="mb-5">
        <h2 class="section-title">Meet the Team</h2>
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card team-card text-center p-3">
                    <img src="/images/profile1.jpg" alt="Team Member" class="team-img">
                    <h5 class="mt-2 mb-1">John Doe</h5>
                    <p class="text-muted">Founder & Developer</p>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card team-card text-center p-3">
                    <img src="/images/profile2.jpg" alt="Team Member" class="team-img">
                    <h5 class="mt-2 mb-1">Jane Smith</h5>
                    <p class="text-muted">UI/UX Designer</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Section -->
    <div class="contact-section text-center">
        <h2 class="section-title">Get in Touch</h2>
        <p>Email: support@blooddonation.org</p>
        <p>Phone: +880 123 456 789</p>
        <p>Location: Dhaka, Bangladesh</p>
    </div>
</div>
