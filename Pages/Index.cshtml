@page
@model IndexModel

@{
    ViewBag.Title = "Home";
}

<div>
    <style>
        /* General Body Styling */
        body {
            font-family: 'Roboto', sans-serif;
            background: #f4f7fb;
            margin: 0;
            padding: 0;
        }

        /* Carousel Styles */
        .carousel-inner img {
            max-height: 500px;
            object-fit: cover;
            border-radius: 10px;
        }

        @@media (max-width: 768px) {
            .carousel-inner img {
                max-height: 300px;
            }
        }

        /* Section Headings */
        .fs-1 {
            font-size: 2rem;
        }

        .fs-1.fw-bold {
            font-weight: 700;
        }

        .text-danger {
            color: #e63946;
        }

        /* Donation Process Section */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 1.5rem;
            color: #007bff;
            font-weight: bold;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        .img-fluid {
            border-radius: 10px;
        }

        /* Button Styling */
        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 12px 20px;
            font-size: 1rem;
            border-radius: 5px;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Blood Donation Camp Section */
        .card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

        /* Center Alignment for Content */
        .text-center {
            text-align: center;
        }

        .font-monospace {
            font-family: 'Courier New', monospace;
        }

        .container {
            padding: 0 15px;
        }

        .mt-3,
        .mt-5 {
            margin-top: 30px;
        }

        .g-4 {
            gap: 30px;
        }

        /* Responsive Styles for Smaller Screens */
        @@media (max-width: 992px) {
            .col-md-6 {
                flex: 0 0 48%;
                max-width: 48%;
            }
        }

        @@media (max-width: 768px) {
            .col-md-6 {
                flex: 0 0 100%;
                max-width: 100%;
            }
        }
    </style>

    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://i.ibb.co/LhNF40Rh/blood-doantioin-3.jpg" class="d-block w-100" alt="Blood Donation 1">
            </div>
            <div class="carousel-item">
                <img src="https://i.ibb.co/kV9PK2kg/blood-doantioin-5.jpg" class="d-block w-100" alt="Blood Donation 2">
            </div>
            <div class="carousel-item">
                <img src="https://i.ibb.co/LhNF40Rh/blood-doantioin-3.jpg" class="d-block w-100" alt="Blood Donation 3">
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- How It Works (Donation Process) -->
    <div class="mt-3">
        <p class="fs-1 fw-bold font-monospace text-center text-danger">How It Works? (Donation Process)</p>
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">
                <!-- Step 1 -->
                <div class="col">
                    <div class="card h-100 shadow-lg border-0 rounded-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4">
                                <img src="https://i.ibb.co/s9hpnHss/38903607.jpg" class="img-fluid rounded-start"
                                    alt="Step 1">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-info">Step 1: Registration</h5>
                                    <p class="card-text">Click the registration button at the top right.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 2 -->
                <div class="col">
                    <div class="card h-100 shadow-lg border-0 rounded-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4">
                                <img src="https://i.ibb.co/twd7jz8J/33936617.jpg" class="img-fluid rounded-start"
                                    alt="Step 2">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-info">Step 2: Health Check-up</h5>
                                    <p class="card-text">Your health must be in good condition for donation.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 3 -->
                <div class="col">
                    <div class="card h-100 shadow-lg border-0 rounded-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4">
                                <img src="https://i.ibb.co/qLFm6y6J/38917234.jpg" class="img-fluid rounded-start"
                                    alt="Step 3">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-info">Step 3: Donation</h5>
                                    <p class="card-text">The donation process is safe and takes only a few minutes.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 4 -->
                <div class="col">
                    <div class="card h-100 shadow-lg border-0 rounded-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4">
                                <img src="https://i.ibb.co/pBsStrfw/43797849.jpg" class="img-fluid rounded-start"
                                    alt="Step 4">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-info">Step 4: Rest & Refreshments</h5>
                                    <p class="card-text">Enjoy some refreshments after donating.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Step 5 -->
                <div class="col">
                    <div class="card h-100 shadow-lg border-0 rounded-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4">
                                <img src="https://i.ibb.co/m5VPbMwT/38121783.jpg" class="img-fluid rounded-start"
                                    alt="Step 5">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-info">Step 5: Get Notified</h5>
                                    <p class="card-text">Receive a notification when your blood is used.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Find a Blood Donation Camp or Center -->
    <div class="mt-5">
        <p class="fs-1 fw-bold font-monospace text-center text-danger">Find a Blood Donation Camp or Center</p>
        <div class="container">
            <div class="row g-4 justify-content-center">
                <!-- Option 1: Donor -->
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="card h-100">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4">
                                <img src="https://i.ibb.co/Q7wpMrwC/2796473.jpg" class="img-fluid h-100 rounded-start"
                                    alt="Option 1">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-info">Option 1: Donor</h5>
                                    <p class="card-text">Visit our donor site to check available blood types.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Option 2: Blood Bank -->
                <div class="col-lg-6 col-md-6 col-12">
                    <div class="card h-100">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4">
                                <img src="https://i.ibb.co/ymbzTcCg/blood-bank.jpg"
                                    class="img-fluid h-100 rounded-start" alt="Option 2">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title text-info">Option 2: Check Blood Bank</h5>
                                    <p class="card-text">View blood types and availability at our blood bank.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
